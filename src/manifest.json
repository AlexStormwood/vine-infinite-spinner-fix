{
  "manifest_version": 3,
  "name": "Vine Infinite Spinner Fix",
  "description": "Fixes the infinite spinner bug on Amazon Vine.",
  "version": "1.0.3",
  "action": {
    "default_title": "Vine Infinite Spinner Fix",
    "default_icon": "icon-48.png"
  },
  "icons": {
    "16": "icon-16.png",
		"32": "icon-32.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	},
  "web_accessible_resources": [
		{
			"resources": [
				"fix.js",
        "spinner.png"
			],
			"matches": [
				"*://*.amazon.co.uk/*",
				"*://*.amazon.es/*",
				"*://*.amazon.co.jp/*",
				"*://*.amazon.de/*",
				"*://*.amazon.fr/*",
        "*://*.amazon.ca/*",
				"*://*.amazon.com/*"
      ]
		}
	],
  "content_scripts": [
    {
      "matches": [
				"*://*.amazon.co.uk/vine/*",
				"*://*.amazon.com/vine/*",
        "*://*.amazon.ca/vine/*",
				"*://*.amazon.de/*/vine/*",
				"*://*.amazon.co.jp/vine/*",
				"*://*.amazon.de/vine/*",
				"*://*.amazon.fr/vine/*",
				"*://*.amazon.es/vine/*"
      ],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}
